;; show-line-number-and-column-number: show the cursor position on the mode line.
;; The mode line is typically the status line near the bottom of the screen.

(setq-default line-number-mode t)
(setq-default column-number-mode t)

(setq line-number-mode t)
(setq column-number-mode t)

(line-number-mode t)
(column-number-mode t)
